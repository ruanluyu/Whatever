package system;

class AKeyPress {

	  boolean keyPress[] = { false, false, false, false, false };
	  char id[] = { ' ', 'w', 's', 'a', 'd' };
	  boolean firstA = false;
	  boolean firstD = false;

	  void checkAD() {
	    if (keyPress[3] && keyPress[4] == false) {
	      firstA = true;
	      firstD = false;
	    } else if (keyPress[3] == false && keyPress[4]) {
	      firstA = false;
	      firstD = true;
	    } else if (keyPress[3] == false && keyPress[4] == false) {
	      firstA = false;
	      firstD = false;
	    }
	  }

	  boolean keyBlank() {
	    return keyPress[0];
	  }

	  boolean keyW() {
	    return keyPress[1];
	  }

	  boolean keyS() {
	    return keyPress[2];
	  }

	  boolean keyA() {
	    boolean out = false;
	    if (keyPress[3]) {
	      out = true;
	    }
	    if (firstA && keyPress[3] && keyPress[4]) {
	      out = false;
	    }
	    return out;
	  }
	  

	  boolean keyD() {
	    boolean out = false;
	    if (keyPress[4]) {
	      out = true;
	    }
	    if (firstD && keyPress[3] && keyPress[4]) {
	      out = false;
	    }
	    return out;
	  }

	  void checkKeyPressed() {
	    for (int i = 0; i < 5; i++) {
	      if (key == id[i]) {
	        keyPress[i] = true;
	      }
	    }
	  }

	  void checkKeyRelease() {
	    for (int i = 0; i < 5; i++) {
	      if (key == id[i]) {
	        keyPress[i] = false;
	      }
	    }
	  }

	}